<section id="main" class="container">
  <div id="login">
    <div class="row">
      <div id="content" class="span26">
        <div class="row">
          <div class="offset2 span22">
            <div class="offset6 span8">
              <a href="https://www.balancedpayments.com"><img class="logo" src="images/balanced-logo.png" alt="Balanced" /></a>

              <form id="auth-form" {{ bindAttr class="loginError:error" }}>
                {{view Ember.TextField type="email" name="email" valueBinding="email" placeholder="Email"}}
                {{view Ember.TextField type="password" name="password" valueBinding="password" placeholderTranslation="login.password" action="signIn"}}
                <div class="clear"></div>

                {{#linkTo "forgotPassword" class="pull-left forgot-password" }}{{t login.forgot_password}}{{/linkTo}}

                <button class="pull-right" {{action "signIn"}} type="button">{{t login.signin}}</button>
              </form>

              {{#if loginError}}
                <div class="alert alert-error">
                  {{loginResponse}}}
                </div>
              {{/if}}

              <p class="label4b" id="get-started">{{t login.new_to_balanced}} <a href="#/start" class="linky">{{t login.get_started}}</a>.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{view Balanced.LanguageDropdownView}}
</section>
